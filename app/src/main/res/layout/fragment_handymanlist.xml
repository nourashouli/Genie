<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewBg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:ignore="InvalidId">

        <Button
            android:id="@+id/sort_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time" />

        <Button
            android:id="@+id/sort_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price" />

        <Button
            android:id="@+id/sort_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location" />

        <Button
            android:id="@+id/open_urgent_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/quantum_googred"
            android:padding="5dp"
            android:text="urgent rqeuest"
            android:textColor="@color/white"></Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"


        android:layout_above="@+id/handymanlist_recycler"
        android:layout_marginBottom="-100dp">

        <EditText
            android:id="@+id/sss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:hint="Search..."></EditText>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/handymanlist_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />


</RelativeLayout>